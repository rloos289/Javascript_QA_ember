<div class="row">
  <div class="col-md-12">
    <button class="btn-lg pull-right" {{action "newQuestion"}}>New Question</button>
    <button class='btn-lg pull-right' {{action "toggleFavorites"}}>Show Favorites</button>
    <h2>Questions</h2>
    {{answer-question questions=questions answers=answers toggleUpdate='toggleUpdate' toggleAnswer='toggleAnswer' deleteAnswer='deleteAnswer' deleteQuestion='deleteQuestion' saveRating='saveRating'}}
  </div>
</div>
{{#if modalShowing}}
  {{#modal-dialog translucentOverlay=true clickOutsideToClose=true close='closeModalDialog'}}
  {{#if toggleUpdate}}
    {{update-question currentQuestion=currentQuestion newQuestion='newQuestion' updateQuestion='updateQuestion'}}
  {{else if toggleAnswer}}
    {{add-answer addAnswer='addAnswer' newQuestion='newQuestion'}}
  {{else if toggleQuestion}}
    {{add-question saveQuestion='saveQuestion' newQuestion='newQuestion'}}
  {{else if toggleFavorites}}
    {{#each favoriteQuestions.questions as |favorite|}}
      <p>{{favorite.question}}</p>
    {{/each}}
  {{/if}}
  {{/modal-dialog}}
{{/if}}
