  <h2>Update your Question</h2>
  <form class="updatequestion">
    <div class="form-group">
      <label for="question">Question</label>
      {{input class="form-control" value=currentQuestion.question id="question"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=currentQuestion.author id="author"}}
    </div>
    <div class="form-group">
      <label for="comment">Comment</label>
      {{input class="form-control" value=currentQuestion.comment id="comment"}}
    </div>
    <button class="btn" {{action 'updateQuestion'}}>Update</button>
    <button class='btn pull-right' {{action 'newQuestion'}}>Ask a question!</button>
  </form>
