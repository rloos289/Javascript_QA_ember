<div class='question'>
  <div class="col-md-12">
    <p>Question: {{question.question}} </p>
    <p>-{{question.author}}</p>
  </div>
  <div class="col-md-12">
    <button class='btn qbutton' {{action 'toggleUpdate' question}} >Update</button>
    <button class='btn qbutton' {{action 'deleteQuestion' question}}>Delete</button>
    <button class='btn qbutton' {{action 'toggleAnswer' question}}>Answer</button>
    <button class='btn qbutton' {{action 'showDetails' question}}>More</button>
    <button class='btn qbutton' {{action 'addToFavorite' question}}>Like</button>
  </div>
    {{!-- {{#if showDetails}}
    {{answer-tile question=question answers=answers toggleAnswer='toggleAnswer' deleteAnswer='deleteAnswer' saveRating='saveRating'}}
    {{/if}} --}}
</div>
<hr>
